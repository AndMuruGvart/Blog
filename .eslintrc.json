{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],

      "extends": [
        "airbnb",
        "airbnb-typescript",
        "airbnb/hooks",
        "next/core-web-vitals",
        "prettier"
      ],

      "parserOptions": {
        "project": ["./tsconfig.json"]
      },
      "rules": {
        "react/jsx-props-no-spreading": "off",
        "react/require-default-props": "off",
        "no-console": "off"
      }
    }
  ]
}
